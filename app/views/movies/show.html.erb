




<div class="container mt-5" >
  <div class="card" style="m-auto">
  <img  class="img-fluid img-thumbnail" class="card-img-top" style="height: 30rem;background-image: url(<%= @movie.poster_url %>);background-position: center;background-repeat: no-repeat;position: relative;background-size: cover;
" />



  <div class="card-body">
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <h5 class="card-title"><%= @movie.title %></h5>
        <p class="card-text"><%= @movie.overview %></p>
      </div>
      <div  class="d-flex align-items-center ">
        <div class="m-2">
          <%= link_to "Delete",
            movie_path,
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            :class => "btn btn-danger"
          %>
        </div>
        <div>
          <div class="m-2">
          <%= link_to "Edit", edit_movie_path(@movie), :class => "btn btn-success" %>
        </div>
      </div>
    </div>

  </div>



  </div>
</div>
